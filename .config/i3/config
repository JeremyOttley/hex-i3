# HexDSL i3wm Config. major update: October 2018

# #---BASICS---# #
	for_window [class="^.*"] border pixel 3

 	#Colours
 	set $bg-color 	         #2f343f
 	set $inactive-bg-color   #2f343f
 	set $text-color          #99CCFF
 	set $inactive-text-color #676E7D
 	set $urgent-bg-color     #2f343f
 	set $windowcolor	     #A11581

	#Vairables
	set $mod Mod4
	set $ws1 "1"
	set $ws2 "2"
	set $ws3 "3"
	set $ws4 "4"
	set $ws5 "5"
	set $ws6 "6"
	set $ws7 "7"
	set $ws8 "8"
	set $ws9 "9"
	set $ws10 "ï†¶"
	set $brows "qutebrowser"
	set $termin "termite"

	#workspace screen locations
	#Left   = HDMI-0
	#Middle = DP-3
	#Right  = DP-1
	workspace $ws1 output HDMI-0
	workspace $ws2 output HDMI-0
	workspace $ws3 output HDMI-0
	workspace $ws4 output DP-3
	workspace $ws5 output DP-3
	workspace $ws6 output DP-3
	workspace $ws7 output DP-1
	workspace $ws8 output DP-1
	workspace $ws9 output DP-1
	workspace $ws10 output DP-3

	#scratchpad
	bindsym $mod+Shift+minus move scratchpad
	bindsym $mod+minus scratchpad show, resize set 1600 900, move absolute position center
	floating_modifier $mod

# #---LAUNCHERS---# #

	bindsym $mod+Return exec --no-startup-id $termin
	bindsym $mod+Escape exec --no-startup-id xfce4-taskmanager
	bindsym $mod+Shift+q kill
	bindsym $mod+Shift+r restart
	bindsym $mod+Shift+notsign exec --no-startup-id systemctl poweroff
	bindsym $mod+Shift+o exec --no-startup-id screenoff
	bindsym $mod+d exec --no-startup-id rofi -show run
	bindsym $mod+c exec --no-startup-id rofi -show window
	bindsym $mod+q exec --no-startup-id firejail $brows
	bindsym $mod+Shift+numbersign exec --no-startup-id /home/hexdsl/.bin/vpntoggle
	bindsym $mod+numbersign exec --no-startup-id /home/hexdsl/.bin/vpnstatus
	bindsym $mod+t exec --no-startup-id caja /home/hexdsl/hexdrive/obs
	bindsym $mod+Shift+t exec --no-startup-id termite -e ranger
	bindsym $mod+o exec --no-startup-id /home/hexdsl/.bin/bottomleft
	bindsym $mod+m exec --no-startup-id spotify;workspace $ws2;focus
	bindsym $mod+s exec --no-startup-id steam-runtime;workspace $ws10;focus
	bindsym $mod+Shift+s exec --no-startup-id steam-native;workspace $ws10;focus
	bindsym $mod+i exec --no-startup-id lutris
	bindsym $mod+Shift+i exec --no-startup-id itch
	bindsym $mod+Shift+b exec --no-startup-id obs & chatty
	bindsym $mod+b exec --no-startup-id obs
	bindsym $mod+z exec --no-startup-id deluge
	bindsym $mod+x exec --no-startup-id streamlink-twitch-gui
	bindsym $mod+p exec --no-startup-id ~/.bin/screenshot
    bindsym $mod+Shift+p exec --no-startup-id ~/.bin/screenshotmiddle
	bindsym $mod+BackSpace exec --no-startup-id i3-easyfocus -a
	bindsym $mod+Shift+BackSpace exec --no-startup-id ~/.bin/killbill
    bindsym $mod+w exec --no-startup-id ~/.bin/glitchup
    bindsym $mod+apostrophe exec --no-startup-id blueberry
	bindsym $mod+slash exec --no-startup-id notify-send -a time "`date +"%H:%M %a %d %b"`"

# #---LAUNCH ON STARTUP---# #
    exec_always --no-startup-id ~/.config/polybar/launch
	exec --no-startup-id unclutter
    exec_always killall compton || true && compton -b -f --unredir-if-possible
  # exec --no-startup-id caffeine
	exec --no-startup-id spotify;workspace $ws2;focus
	exec --no-startup-id redshift-gtk
	exec --no-startup-id mate-power-manager
	exec_always --no-startup-id ~/.bin/glitchup
    exec --no-startup-id nextcloud

# #---MOVEMENT CONTROLS---# #

	# Select & move window
	bindsym $mod+h focus left
	bindsym $mod+j focus down
	bindsym $mod+k focus up
	bindsym $mod+l focus right
	bindsym $mod+Shift+h move left
	bindsym $mod+Shift+j move down
	bindsym $mod+Shift+k move up
	bindsym $mod+Shift+l move right

	# split orientation
	bindsym $mod+v split toggle

	# resize with arrow keys
	bindsym $mod+Left		exec --no-startup-id "i3resize left"
	bindsym $mod+Down		exec --no-startup-id "i3resize down"
	bindsym $mod+Up			exec --no-startup-id "i3resize up"
	bindsym $mod+Right		exec --no-startup-id "i3resize right"

	# Modes
	bindsym $mod+f fullscreen toggle
	bindsym $mod+Shift+space floating toggle
	bindsym $mod+space focus mode_toggle

	# switch to workspace
	bindsym $mod+1 workspace $ws1
	bindsym $mod+2 workspace $ws2
	bindsym $mod+3 workspace $ws3
	bindsym $mod+4 workspace $ws4
	bindsym $mod+5 workspace $ws5
	bindsym $mod+6 workspace $ws6
	bindsym $mod+7 workspace $ws7
	bindsym $mod+8 workspace $ws8
	bindsym $mod+9 workspace $ws9
	bindsym $mod+0 workspace $ws10

	# move focused container to workspace
	bindsym $mod+Shift+1 move container to workspace $ws1
	bindsym $mod+Shift+2 move container to workspace $ws2
	bindsym $mod+Shift+3 move container to workspace $ws3
	bindsym $mod+Shift+4 move container to workspace $ws4
	bindsym $mod+Shift+5 move container to workspace $ws5
	bindsym $mod+Shift+6 move container to workspace $ws6
	bindsym $mod+Shift+7 move container to workspace $ws7
	bindsym $mod+Shift+8 move container to workspace $ws8
	bindsym $mod+Shift+9 move container to workspace $ws9
	bindsym $mod+Shift+0 move container to workspace $ws10

# #---Audio controls---# #
	bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 1 +5%
	bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 1 -5%
	bindsym XF86AudioPause exec playerctl play-pause
	bindsym XF86AudioNext exec playerctl next
	bindsym XF86AudioPrev exec playerctl previous

# #---Application WS assignment---# #
	for_window [class="streamlink-twitch-gui"] floating enable
	assign [class="Steam"] $ws10
	assign [class="obs"] $ws3
	assign [class="chatty-Chatty"] $ws9
	assign [class="(?i)Spotify"] $ws2
	assign [class="(?i)mpv"] $ws1
	assign [class="(?i)discord"] $ws7
	for_window [class="(?i)Spotify"] move to workspace $ws2
	for_window [class="Peek"] floating enable
	for_window [class="(?i)mpv"] fullscreen enable
	for_window [class="ProjectM-pulseaudio"] floating enable
	for_window [class="(?i)Yad"] floating enable

# #---Gaps---# #
	smart_gaps on
	smart_borders on
	gaps inner 12
	gaps outer 0

	#code                   border              background         text                  indicator
	client.focused          $bg-color           #7401DF            $text-color           #FF3CFF
	client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color  #FF3CFF
	client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color  #FF3CFF
	client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color           #FF3CFF

	font pango:System Ubuntu Display 13

exec --no-startup-id ~/.config/i3/restore

# vim:filetype=i3
